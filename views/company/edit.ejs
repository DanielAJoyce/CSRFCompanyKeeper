<% include ../partials/header %>


<div class="container">
  <h1 class="text-center">Edit Company: <%= company.name %> </h1>


    <p> Below, you can edit the details of <%= company.name %> </p>  
  <form action="/company/<%=company.id%>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="name">Company Name</label>
      <input type="text"  class="form-control" value="<%=company.name %>"name="name" required="true">
      </div>
    <div  class="form-group">
      <label for="address">Company Address</label>
      <input type="text"  class="form-control" value="<%=company.address %>"name="address" required="true">
    </div>
    <div  class="form-group">
      <label for="text">Company Phone Number</label>
      <input type="text"  class="form-control" value="<%=company.phonenumber %>"name="phonenumber" required="true">
    </div>
      <input type="hidden" name="_csrf" id="csrf" value="<%=csrfToken%>">
    <button class="btn-success btn">Confirm</button>
  </form>

  <a href="/company">Go back to address book</a>
</div>
</div>


<% include ../partials/footer %>