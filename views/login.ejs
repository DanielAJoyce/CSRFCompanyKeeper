<% include ./partials/header %>

<div class="container">
  <h1 class="text-center">Login to use CompanyKeeper!</h1>
  <form action="/login" method="POST">
    <div class="form-group">
      <label for="username">Username</label>
      <input type="text"  class="form-control" placeholder="username"name="username" required="true"
      pattern=".{6,}" required title="Must be a minimum of 6 characters">
      </div>
    <div  class="form-group">
      <label for="password">Password</label>
      <input type="password"  class="form-control" placeholder="password"name="password" required="true" 
      pattern=".{6,}" required title="Must be a minimum of 6 characters">
    </div>
      <input type="hidden" name="_csrf" id="csrf" value="<%= csrfToken %>">
      <a href="/" class="btn btn-danger" >Back to main page</a>
    <button class="btn-success btn">Log in</button>
  </form>
  <a href="/register" class="btn btn-info goToOtherForm" >Click here to go to register page</a>
</div>
</div>


<% include ./partials/footer %>
